<Window x:Class="Tcp_Controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tcp_Controller"
        mc:Ignorable="d"
        Title="Tcp Controller" Height="250" Width="400">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Width="100" Height="40" Content="LEFT" Margin="10" Click="ButtonLeft_Click"/>
            <Button Width="100" Height="40" Content="RIGHT" Margin="10" Click="ButtonRight_Click"/>
        </StackPanel>
        <Button Width="100" Height="20" Content="CONNECT" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="ButtonConnect_Click"/>
    </Grid>
</Window>
